                    <h2 style="font-family: 'Times New Roman', Times, serif; text-align: center;">Login to Enter</h2>
                    <form action="/login" method="post">
                        
                        <div class="form-outline mb-4">
                            <input type="text" id="name" class="form-control form-control-lg" style="font-size:medium ;"
                                placeholder="Enter Your Username" name="name" onkeyup="validateName()"/>
                            {{!-- <label class="form-label" for="form3Example3">Email address</label> --}}
