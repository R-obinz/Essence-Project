 

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ITEMS</th>
      <th scope="col">DELIVERY</th>
      <th scope="col">DATE</th>
      <th scope="col">TOTAL</th>
      <th scope="col">PAYMENTMETHOD</th>
      <th scope="col">STATUS</th>
      <th scope="col">ACTION</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
      
    <tr>
        
      <th scope="row">{{math @index "+"1}}</th>
      <td> <a href="" data-toggle="modal" data-target="#b{{this._id}}">{{this.product.productname}}</a></td>
      <td> {{this.name.name}} <br> {{this.address}} <br>{{this.email}} <br>{{this.phone}}</td>
      
      <td>{{this.Date}}</td>
      <td>{{this.subtotal}}</td>
      <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>
      
{{#ifCound this.status 'Placed'}}


<td> <select onchange="status(this.value,'{{this._id}}','{{this.name._id}}')" class="custom-select tm-select-accounts" style="width: 90px ;"
                            id="category" name="offer" >
                            <option selected>{{this.status}}</option>
                            <option value="SHIPPED">SHIPPED</option>
                            <option value="CANCEL">CANCEL</option>
                            <option value="DELIVERED">DELIVERED</option>
                            {{!-- <option value="2">Most Popular</option>
                            <option value="3">Trending</option> --}}
                        </select >
                    </td>
                      
      
      {{else}}{{#ifCound this.status 'SHIPPED'}}
      <td>
        <select onchange="status(this.value,'{{this._id}}','{{this.name._id}}')" class="custom-select tm-select-accounts"
                            id="category" name="offer" >
                            <option selected>{{this.status}}</option>
                            <option value="CANCEL">CANCEL</option>
                            <option value="DELIVERED">DELIVERED</option>
                            {{!-- <option value="2">Most Popular</option>
                            <option value="3">Trending</option> --}}
                        </select >
      </td>
      {{/ifCound}}
      {{/ifCound}}
    </tr>


        <!-- Modal -->
    
<div class="modal fade" id="b{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle" style="font-family: 'Times New Roman', Times, serif;">Delivery Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h6 style="font-family: 'Times New Roman', Times, serif;">Delivery Address</h6>
        {{address}}
        <br>
       <span>MobileNumber:{{phone}}</span> 
      </div>
      <div class="container">
        <h6 style="font-family: 'Times New Roman', Times, serif;">Product Details</h6>
        <div class="row d-flex justify-content-between align-items-center" style="margin-top: 10px;">
                
              <div class="col-md-2 col-lg-2 col-xl-2">
               
                  <img
                  src="/images/{{this.product.image}}"
                  class="img-fluid rounded-3" alt="" style="height: 80px;">
                
                
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
               {{this.product.productname}}
               <br>
              Qty: {{this.quantity}}
              Price:{{this.product.price}}
              Discount:{{this.discount}}
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                 subtotal: {{this.subtotal}}
              </div>
               <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                {{#ifCound status 'Placed'}}
                  {{this.created}}
                  {{else}}
                  {{this.updated}}
                  {{/ifCound}}
              </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      
      </div>
    </div>
  </div>
</div>

      {{/each}}
  </tbody>
</table>
</div>

